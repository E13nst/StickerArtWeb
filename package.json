{
  "name": "sticker-gallery-miniapp",
  "version": "1.1.0",
  "description": "Telegram Mini App for Sticker Gallery",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "build": "npx tsc && npx vite build",
    "build:win": "npx tsc && npx vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:actions": "playwright test tests/stickerset-actions.spec.ts",
    "test:actions:headed": "playwright test tests/stickerset-actions.spec.ts --headed",
    "test:benchmark": "playwright test tests/gallery-benchmark.spec.ts --project chromium --reporter=list,json",
    "test:prod": "playwright test --config=miniapp/playwright.config.prod.ts",
    "test:prod:headed": "playwright test --config=miniapp/playwright.config.prod.ts --headed",
    "test:prod:report": "playwright show-report playwright-report-prod",
    "test:nginx-cache": "playwright test tests/nginx-cache.spec.ts --config=miniapp/playwright.config.prod.ts",
    "test:nginx-cache:headed": "playwright test tests/nginx-cache.spec.ts --config=miniapp/playwright.config.prod.ts --headed",
    "start": "powershell -ExecutionPolicy Bypass -File scripts/simple-start.ps1",
    "stop": "powershell -ExecutionPolicy Bypass -File scripts/simple-stop.ps1",
    "restart": "powershell -ExecutionPolicy Bypass -File scripts/simple-restart.ps1",
    "rebuild": "powershell -ExecutionPolicy Bypass -File scripts/simple-rebuild.ps1",
    "check": "powershell -ExecutionPolicy Bypass -File scripts/simple-check.ps1",
    "quick-test": "powershell -ExecutionPolicy Bypass -File scripts/simple-check.ps1",
    "benchmark:analyze": "node scripts/analyze-benchmark.cjs",
    "figma:ws": "bun run scripts/figma-websocket-server.ts"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.12",
    "@telegram-apps/bridge": "^2.0.0",
    "@telegram-apps/sdk": "^2.0.0",
    "@telegram-apps/telegram-ui": "^2.1.13",
    "@tonconnect/ui-react": "^2.0.0",
    "@twa-dev/sdk": "^8.0.2",
    "axios": "^1.6.2",
    "brotli": "^1.3.3",
    "framer-motion": "^11.18.2",
    "jszip": "^3.10.1",
    "lottie-react": "^2.4.0",
    "lottie-web": "^5.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^10.0.0",
    "react-router-dom": "^6.20.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@types/jszip": "^3.4.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "baseline-browser-mapping": "^2.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "terser": "^5.44.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
