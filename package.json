{
  "name": "sticker-gallery-miniapp",
  "version": "1.0.0",
  "description": "Telegram Mini App for Sticker Gallery",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "build": "mkdir -p dist && cp index.html dist/ && tsc && vite build",
    "build:win": "New-Item -ItemType Directory -Force -Path dist; Copy-Item index.html dist/; npx tsc; npx vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "start": "powershell -ExecutionPolicy Bypass -File scripts/simple-start.ps1",
    "stop": "powershell -ExecutionPolicy Bypass -File scripts/simple-stop.ps1",
    "restart": "powershell -ExecutionPolicy Bypass -File scripts/simple-stop.ps1; powershell -ExecutionPolicy Bypass -File scripts/simple-start.ps1",
    "rebuild": "powershell -ExecutionPolicy Bypass -File scripts/simple-rebuild.ps1",
    "check": "powershell -ExecutionPolicy Bypass -File scripts/simple-check.ps1",
    "quick-test": "powershell -ExecutionPolicy Bypass -File scripts/simple-check.ps1"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.0",
    "@mui/material": "^5.15.0",
    "@telegram-apps/telegram-ui": "^2.1.13",
    "@twa-dev/sdk": "^8.0.2",
    "axios": "^1.6.2",
    "framer-motion": "^11.18.2",
    "lottie-react": "^2.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
